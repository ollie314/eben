<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "ch.simnetsa.vsplus"
    version   = "1.0.0">

	<name>Test Phonegap social</name>
	<description>Application de test des frameworks</description>
	
	<author href="http://www.simnetsa.ch" email="mlefebvre@simnetsa.ch">Simnet S.A.</author>
	
	<preference name="phonegap-version" value="2.1.0" />
	<preference name="orientation"      value="default" />
	<preference name="target-device"    value="universal" />
	<preference name="fullscreen"       value="false" />
	<preference name="android-installLocation" value="preferExternal" />
	
	
	<feature name="http://api.phonegap.com/1.0/battery"/>
	<feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/contacts"/>
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/media"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/notification"/>
	
	<gap:plugin name="ChildBrowser" />
	
	<gap:splash src="splash/splash.png" />
	<gap:splash src="splash/ios/Default.png" width="320" height="480" />
	<gap:splash src="splash/ios/Default_at_2x.png" width="640" height="960" />
	<gap:splash src="splash/ios/Default_iphone5.png" width="640" height="1136" />
	
	<icon src="icon.png" />
	<gap:splash src="splash/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
	<gap:splash src="splash/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
	<gap:splash src="splash/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
	<gap:splash src="splash/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />
	<gap:splash src="splash/winphone/splash.jpg" gap:platform="winphone" />

</widget>
